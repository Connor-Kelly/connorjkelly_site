---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection, getEntry } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('projects', (entry) => entry.id.includes('index'))).sort(
	(a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
const index = await getEntry('projects', 'index')
const { Content } = await index.render();
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="w-[960px]">
			<section class="flex flex-wrap justify-center">
				<div class="text-center prose">
					<Content />
				</div>
			</section>
			<section class="">
				<div class="flex flex-wrap justify-center items-center">
					{
						posts.filter(p => p.id != index.id)
						.map((post) => (
							<div class="w-1/2 lg:w-4/12 m-4 text-center hover:shadow-xl shadow-sm transition-all grow">
								{post.id}
								<a href={`/projects/${post.slug}/`}>
									<img class="w-100" src={post.data.heroImage} alt="" />
									<h2 class="text-3xl">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</div>
						))
					}
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>
