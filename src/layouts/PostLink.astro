---
import { getCollection, type CollectionEntry } from 'astro:content'
// import BaseHead from '../components/BaseHead.astro'
// import Header from '../components/Header.astro'
// import Footer from '../components/Footer.astro'
// import FormattedDate from '../components/FormattedDate.astro'

// type Props = CollectionEntry<'blog'>['data']

let { post, uri } = Astro.props
if (!post) {
    post = (await getCollection("projects")).find(p => p.id == uri)
}

---

<div
	class='pb-1 m-1 text-center hover:shadow-xl shadow-md transition-all grow bg-zinc-100 rounded-lg'
>
	<a href={`/projects/${post.slug}/`}>
        <!-- {JSON.stringify(post)} -->
		<img
			class='w-100 rounded-b-lg'
			src={post.data.heroImage}
			alt=''
		/>
		<p class='pt-1'>{post.data.title}</p>
	</a>
</div>
